{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Ecommerce Web app",
        "description": "Ecommerce Web app API"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "tags": [
        {
            "name": "Users",
            "description": "API for users in the system"
        },
        {
            "name": "Auth",
            "description": "API for authorization in the system"
        }
    ],
    "schemes": [
        "http"
    ],
    "consumes": [
        "application/json"
    ],
    "produces": [
        "application/json"
    ],
    "paths": {
        "/auth/signup": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Sign Up new user in system",
                "description": "Sign Up new user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "User that we want to create",
                        "schema": {
                            "$ref": "#/definitions/User"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "201": {
                        "description": "New user is created",
                        "schema": {
                            "$ref": "#/definitions/Signup"
                        }
                    },
                    "400": {
                        "description": "Error creating user",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Log in user in system",
                "description": "Log in user in system",
                "parameters": [
                    {
                        "name": "user",
                        "in": "body",
                        "description": "Log In user details",
                        "schema": {
                            "$ref": "#/definitions/LoginInput"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "User logged in and token generated",
                        "schema": {
                            "$ref": "#/definitions/LoginResponse"
                        }
                    },
                    "400": {
                        "description": "Error logging in user",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Logout user from the system",
                "description": "Logout user from the system",
                "parameters": [
                    {
                        "name": "token",
                        "in": "auth",
                        "description": "user token",
                        "schema": {
                            "$ref": "#/definitions/LogoutInput"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "User logged in and token generated",
                        "schema": {
                            "$ref": "#/definitions/LogoutResponse"
                        }
                    },
                    "400": {
                        "description": "Error logging in user",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/email-otp-verification": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Verify email through OTP",
                "description": "Verify email through OTP",
                "parameters": [
                    {
                        "name": "Email and OTP",
                        "in": "body",
                        "description": "Email and OTP",
                        "schema": {
                            "$ref": "#/definitions/VerifyEmailInput"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Email verified Succesfully",
                        "schema": {
                            "$ref": "#/definitions/LogoutResponse"
                        }
                    },
                    "400": {
                        "description": "Error in email verification",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/mobile-otp-verification": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Verify mobile through OTP",
                "description": "Verify mobile through OTP",
                "parameters": [
                    {
                        "name": "mobile and OTP",
                        "in": "body",
                        "description": "mobile and OTP",
                        "schema": {
                            "$ref": "#/definitions/VerifyMobileInput"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Email verified Succesfully",
                        "schema": {
                            "$ref": "#/definitions/LogoutResponse"
                        }
                    },
                    "400": {
                        "description": "Error in mobile verification",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/forgot-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "get link to reset password",
                "description": "get link to reset password",
                "parameters": [
                    {
                        "name": "mobile or email",
                        "in": "body",
                        "description": "mobile or email",
                        "schema": {
                            "$ref": "#/definitions/ForgotPassInput"
                        }
                    }
                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Email verified Succesfully",
                        "schema": {
                            "$ref": "#/definitions/LogoutResponse"
                        }
                    },
                    "400": {
                        "description": "Error in mobile verification",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/reset-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "reset password",
                "description": "reset password",
                "parameters": [
                    {
                        "name": "mobile/email and password",
                        "in": "body",
                        "description": "mobile/email and password",
                        "schema": {
                            "$ref": "#/definitions/ResetPassInput"
                        }
                    },
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "description": "otp to reset password",
                        "type": "number"
                    }

                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Email verified Succesfully",
                        "schema": {
                            "$ref": "#/definitions/LogoutResponse"
                        }
                    },
                    "400": {
                        "description": "Error in mobile verification",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/auth/change-password": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "change password",
                "description": "change password",
                "parameters": [
                    {
                        "name": "token, email and new password",
                        "in": "body",
                        "description": "Enter token, email and new password",
                        "schema": {
                            "$ref": "#/definitions/ChangePassInput"
                        }
                    }

                ],
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Email verified Succesfully",
                        "schema": {
                            "$ref": "#/definitions/LogoutResponse"
                        }
                    },
                    "400": {
                        "description": "Error in mobile verification",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "User": {
            "required": [
                "name",
                "email",
                "password",
                "mobile"
            ],
            "properties": {
                "name": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                },
                "mobile": {
                    "type": "string"
                }
            }
        },
        "Signup": {
            "required": [
                "id",
                "message"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        },
        "Error": {
            "required": [
                "message"
            ],
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "LoginInput": {
            "required": [
                "email",
                "password"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "password": {
                    "type": "string"
                }
            }
        },
        "LoginResponse": {
            "required": [
                "token"
            ],
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "LogoutInput": {
            "required": [
                "token"
            ],
            "properties": {
                "token": {
                    "type": "string"
                }
            }
        },
        "LogoutResponse": {
            "required": [
                "message"
            ],
            "properties": {
                "message": {
                    "type": "string"
                }
            }
        },
        "VerifyEmailInput": {
            "required": [
                "email",
                "otp"
            ],
            "properties": {
                "email": {
                    "type": "string"
                },
                "otp": {
                    "type": "number"
                }
            }
        },
        "VerifyMobileInput": {
            "required": [
                "mobile",
                "otp"
            ],
            "properties": {
                "mobile": {
                    "type": "string"
                },
                "otp": {
                    "type": "number"
                }
            }
        },
        "ForgotPassInput": {
            "properties": {
                "mobile": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                }
            }
        },
        "ResetPassInput": {
            "required":["password"],
            "properties": {
                "mobile": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type":"string"
                }
            }
        },
        "ChangePassInput": {
            "required":["token","email","password"],
            "properties": {
                "token": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "password": {
                    "type":"string"
                }
            }
        }
    }
}